<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data noupdate="1"> 
        <!-- cron job to be run occucianaly to check if there is a product not synchronised -->
        <record id="web_panier_reminder_cron" model="ir.cron">
            <field name="name">Synchronisation Algolia</field>
            <field name="interval_number">1</field>
            <field name="interval_type">days</field>
            <field name="numbercall">-1</field>
            <field name="doall" eval="False" />
            <field name="model" eval="'website'" />
            <field name="function" eval="'synchronise_algolia_index'" />
            <field name="args" eval="'()'" />
        </record>
        
    </data>
</openerp>
