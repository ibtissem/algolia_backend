<?xml version="1.0" encoding="utf-8"?>
<openerp>
  <data>
  
        <record id="view_algolia_tree" model="ir.ui.view">
            <field name="model">ip.algolia</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="ip_client_id_algolia" />
                    <field name="ip_api_algolia" />
                </tree>
            </field>
        </record>
  
        <record id="view_nosql_backend_form" model="ir.ui.view">
            <field name="model">ip.algolia</field>
            <field name="arch" type="xml">
                <form>
                   <sheet>
                        <label for="name" class="oe_edit_only"/>
                        <h1>
                            <field name="name" class="oe_inline" required="1" />
                        </h1>
                        <group>
                            <field name="ip_client_id_algolia" required="1" />
                            <field name="ip_api_algolia" required="1"/>
                        </group>
                        <group>
                            <field name="ip_index_algolia" required="1"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
        
        <record id="action_algolia" model="ir.actions.act_window">
            <field name="name">Algolia</field>
            <field name="res_model">ip.algolia</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="view_id" ref="view_algolia_tree"/>
        </record>
        
        <!-- <menuitem id="menu_algolia_root"
            name="Connecteurs" /> -->

        <menuitem id="menu_algolia"
            name="Connecteur Algolia"
            parent="base.menu_administration" />

        <menuitem id="menu_algolia_action"
            action="action_algolia"
            sequence="12"
            parent="menu_algolia"/>
            
  </data>
</openerp>
