        <field name="name">algolia.website.config.settings.form.inherit</field>
        <field name="model">website.config.settings</field>
        <field name="inherit_id" ref="website.view_website_config_settings"/>
        <field name="arch" type="xml">
            <group name="social" position="before">
                <group name="algolia" string="Algolia">
                    <field name="api_algolia" />
                    <field name="client_id_algolia" />
                    <field name="index_algolia" />
                </group>
            </group>
        </field>
    </record>
</odoo>
